{
  "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": false,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "removeComments": false,
      "outDir": "dist",
      "rootDir": "src",
      "sourceMap": true,
      "noLib": false,
      "jsx": "react",
      "experimentalDecorators": true,
      "baseUrl": ".",
      "emitDecoratorMetadata": true
  }
}
